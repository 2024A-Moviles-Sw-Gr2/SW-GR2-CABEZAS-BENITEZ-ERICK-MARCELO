<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/cl_crud_artista"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".ArtistaCRUD">

    <EditText
        android:id="@+id/txt_crud_nombre"
        android:layout_width="273dp"
        android:layout_height="61dp"
        android:layout_marginBottom="36dp"
        android:ems="10"
        android:inputType="text"
        android:text="Nombre"
        app:layout_constraintBottom_toTopOf="@+id/txt_crud_canciones"
        app:layout_constraintEnd_toEndOf="@+id/txt_crud_canciones"
        app:layout_constraintHorizontal_bias="0.0"
        app:layout_constraintStart_toStartOf="@+id/txt_crud_canciones" />

    <EditText
        android:id="@+id/txt_crud_canciones"
        android:layout_width="244dp"
        android:layout_height="50dp"
        android:ems="10"
        android:inputType="text"
        android:text="Canciones"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintHorizontal_bias="0.268"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintVertical_bias="0.434" />

    <EditText
        android:id="@+id/txt_fechaDeNacimiento"
        android:layout_width="269dp"
        android:layout_height="51dp"
        android:layout_marginTop="52dp"
        android:ems="10"
        android:inputType="text"
        android:text="Fecha de nacimiento"
        app:layout_constraintEnd_toEndOf="@+id/txt_crud_canciones"
        app:layout_constraintHorizontal_bias="0.0"
        app:layout_constraintStart_toStartOf="@+id/txt_crud_canciones"
        app:layout_constraintTop_toBottomOf="@+id/txt_crud_canciones" />

    <TextView
        android:id="@+id/txt_artista"
        android:layout_width="78dp"
        android:layout_height="34dp"
        android:layout_marginBottom="32dp"
        android:text="Artista"
        android:textAlignment="center"
        android:textSize="24sp"
        android:textStyle="bold"
        app:layout_constraintBottom_toTopOf="@+id/txt_crud_id"
        app:layout_constraintEnd_toEndOf="@+id/txt_crud_id"
        app:layout_constraintStart_toStartOf="@+id/txt_crud_id" />

    <Button
        android:id="@+id/btn_crud_crear"
        android:layout_width="107dp"
        android:layout_height="51dp"
        android:layout_marginEnd="24dp"
        android:text="Crear"
        app:layout_constraintBottom_toBottomOf="@+id/btn_crud_buscar"
        app:layout_constraintEnd_toStartOf="@+id/btn_crud_buscar"
        app:layout_constraintTop_toTopOf="@+id/btn_crud_buscar"
        app:layout_constraintVertical_bias="0.0" />

    <Button
        android:id="@+id/btn_crud_buscar"
        android:layout_width="105dp"
        android:layout_height="53dp"
        android:layout_marginTop="68dp"
        android:text="Buscar"
        app:layout_constraintEnd_toEndOf="@+id/txt_fechaDeNacimiento"
        app:layout_constraintHorizontal_bias="0.634"
        app:layout_constraintStart_toStartOf="@+id/txt_fechaDeNacimiento"
        app:layout_constraintTop_toBottomOf="@+id/txt_fechaDeNacimiento" />

    <Button
        android:id="@+id/btn_crud_actualizar"
        android:layout_width="119dp"
        android:layout_height="54dp"
        android:layout_marginStart="20dp"
        android:text="Actualizar"
        app:layout_constraintBottom_toBottomOf="@+id/btn_crud_buscar"
        app:layout_constraintStart_toEndOf="@+id/btn_crud_buscar"
        app:layout_constraintTop_toTopOf="@+id/btn_crud_buscar"
        app:layout_constraintVertical_bias="0.0" />

    <Button
        android:id="@+id/btn_crud_eliminar"
        android:layout_width="120dp"
        android:layout_height="51dp"
        android:layout_marginTop="56dp"
        android:text="Eliminar"
        app:layout_constraintEnd_toEndOf="@+id/btn_crud_buscar"
        app:layout_constraintStart_toStartOf="@+id/btn_crud_buscar"
        app:layout_constraintTop_toBottomOf="@+id/btn_crud_buscar" />

    <EditText
        android:id="@+id/txt_crud_id"
        android:layout_width="234dp"
        android:layout_height="62dp"
        android:layout_marginBottom="24dp"
        android:ems="10"
        android:inputType="text"
        android:text="ID"
        app:layout_constraintBottom_toTopOf="@+id/txt_crud_nombre"
        app:layout_constraintEnd_toEndOf="@+id/txt_crud_nombre"
        app:layout_constraintHorizontal_bias="0.0"
        app:layout_constraintStart_toStartOf="@+id/txt_crud_nombre" />

    <Button
        android:id="@+id/btn_ver_canciones"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginStart="16dp"
        android:text="ver"
        app:layout_constraintBottom_toBottomOf="@+id/txt_crud_canciones"
        app:layout_constraintStart_toEndOf="@+id/txt_crud_canciones"
        app:layout_constraintTop_toTopOf="@+id/txt_crud_canciones"
        app:layout_constraintVertical_bias="1.0" />
</androidx.constraintlayout.widget.ConstraintLayout>