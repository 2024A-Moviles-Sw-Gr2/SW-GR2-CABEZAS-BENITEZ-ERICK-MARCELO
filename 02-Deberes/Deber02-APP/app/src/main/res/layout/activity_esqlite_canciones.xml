<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/cl_crud_canciones"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".CancionesCRUD">

    <TextView
        android:id="@+id/txt_Titulo_canciones"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginBottom="12dp"
        android:text="Canciones"
        android:textSize="34sp"
        app:layout_constraintBottom_toTopOf="@+id/lv_lisrt_view"
        app:layout_constraintEnd_toEndOf="@+id/lv_lisrt_view"
        app:layout_constraintHorizontal_bias="0.477"
        app:layout_constraintStart_toStartOf="@+id/lv_lisrt_view" />

    <EditText
        android:id="@+id/txt_id_cancion"
        android:layout_width="237dp"
        android:layout_height="49dp"
        android:layout_marginTop="20dp"
        android:ems="10"
        android:inputType="text"
        android:text="id"
        app:layout_constraintEnd_toEndOf="@+id/lv_lisrt_view"
        app:layout_constraintHorizontal_bias="0.496"
        app:layout_constraintStart_toStartOf="@+id/lv_lisrt_view"
        app:layout_constraintTop_toBottomOf="@+id/lv_lisrt_view" />

    <EditText
        android:id="@+id/txt_nombre_cancion"
        android:layout_width="241dp"
        android:layout_height="50dp"
        android:layout_marginTop="16dp"
        android:ems="10"
        android:inputType="text"
        android:text="Nombre"
        app:layout_constraintEnd_toEndOf="@+id/txt_id_cancion"
        app:layout_constraintHorizontal_bias="0.0"
        app:layout_constraintStart_toStartOf="@+id/txt_id_cancion"
        app:layout_constraintTop_toBottomOf="@+id/txt_id_cancion" />

    <EditText
        android:id="@+id/txt_tipo_cancion"
        android:layout_width="241dp"
        android:layout_height="50dp"
        android:layout_marginTop="16dp"
        android:ems="10"
        android:inputType="text"
        android:text="tipo"
        app:layout_constraintEnd_toEndOf="@+id/txt_nombre_cancion"
        app:layout_constraintHorizontal_bias="0.0"
        app:layout_constraintStart_toStartOf="@+id/txt_nombre_cancion"
        app:layout_constraintTop_toBottomOf="@+id/txt_nombre_cancion" />

    <EditText
        android:id="@+id/txt_anio_cancion"
        android:layout_width="248dp"
        android:layout_height="52dp"
        android:layout_marginTop="12dp"
        android:ems="10"
        android:inputType="text"
        android:text="aÃ±o"
        app:layout_constraintEnd_toEndOf="@+id/txt_tipo_cancion"
        app:layout_constraintHorizontal_bias="0.0"
        app:layout_constraintStart_toStartOf="@+id/txt_tipo_cancion"
        app:layout_constraintTop_toBottomOf="@+id/txt_tipo_cancion" />

    <Button
        android:id="@+id/btn_crear_cancion"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginEnd="28dp"
        android:text="crear"
        app:layout_constraintBottom_toBottomOf="@+id/btn_eliminar_cancion"
        app:layout_constraintEnd_toStartOf="@+id/btn_eliminar_cancion"
        app:layout_constraintTop_toTopOf="@+id/btn_eliminar_cancion"
        app:layout_constraintVertical_bias="0.0" />

    <Button
        android:id="@+id/btn_eliminar_cancion"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="20dp"
        android:text="eliminar"
        app:layout_constraintEnd_toEndOf="@+id/txt_anio_cancion"
        app:layout_constraintHorizontal_bias="0.475"
        app:layout_constraintStart_toStartOf="@+id/txt_anio_cancion"
        app:layout_constraintTop_toBottomOf="@+id/txt_anio_cancion" />

    <Button
        android:id="@+id/btn_editar_cancion"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginStart="20dp"
        android:text="actualizar"
        app:layout_constraintBottom_toBottomOf="@+id/btn_eliminar_cancion"
        app:layout_constraintStart_toEndOf="@+id/btn_eliminar_cancion"
        app:layout_constraintTop_toTopOf="@+id/btn_eliminar_cancion"
        app:layout_constraintVertical_bias="0.0" />

    <ListView
        android:id="@+id/lv_lisrt_view"
        android:layout_width="357dp"
        android:layout_height="189dp"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintVertical_bias="0.151" />

</androidx.constraintlayout.widget.ConstraintLayout>