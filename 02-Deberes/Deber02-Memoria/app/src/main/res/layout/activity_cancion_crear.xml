<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/cl_crear_cancion"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".CancionCrear">

    <TextView
        android:id="@+id/txt_ticrear_cancion"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="CANCIÓN"
        android:textSize="20sp"
        android:textStyle="bold"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintVertical_bias="0.065" />

    <EditText
        android:id="@+id/txt_nombreCancion"
        android:layout_width="234dp"
        android:layout_height="57dp"
        android:layout_marginTop="52dp"
        android:ems="10"
        android:hint="Ingrese el nombre"
        android:inputType="text"
        app:layout_constraintEnd_toEndOf="@+id/txt_ticrear_cancion"
        app:layout_constraintHorizontal_bias="0.51"
        app:layout_constraintStart_toStartOf="@+id/txt_ticrear_cancion"
        app:layout_constraintTop_toBottomOf="@+id/txt_ticrear_cancion" />

    <EditText
        android:id="@+id/txt_tipoCancion"
        android:layout_width="232dp"
        android:layout_height="60dp"
        android:layout_marginTop="32dp"
        android:ems="10"
        android:hint="Ingrese el tipo de canción"
        android:inputType="text"
        app:layout_constraintEnd_toEndOf="@+id/txt_nombreCancion"
        app:layout_constraintHorizontal_bias="0.0"
        app:layout_constraintStart_toStartOf="@+id/txt_nombreCancion"
        app:layout_constraintTop_toBottomOf="@+id/txt_nombreCancion" />

    <EditText
        android:id="@+id/txt_anioCancion"
        android:layout_width="231dp"
        android:layout_height="61dp"
        android:layout_marginTop="24dp"
        android:ems="10"
        android:hint="Ingrese el año de publicación"
        android:inputType="text"
        app:layout_constraintEnd_toEndOf="@+id/txt_tipoCancion"
        app:layout_constraintHorizontal_bias="0.0"
        app:layout_constraintStart_toStartOf="@+id/txt_tipoCancion"
        app:layout_constraintTop_toBottomOf="@+id/txt_tipoCancion" />

    <Button
        android:id="@+id/btn_guardar_cancion"
        android:layout_width="183dp"
        android:layout_height="57dp"
        android:layout_marginTop="36dp"
        android:backgroundTint="#FF008805"
        android:text="Guardar"
        app:layout_constraintEnd_toEndOf="@+id/txt_anioCancion"
        app:layout_constraintHorizontal_bias="0.465"
        app:layout_constraintStart_toStartOf="@+id/txt_anioCancion"
        app:layout_constraintTop_toBottomOf="@+id/txt_anioCancion" />

    <ImageView
        android:id="@+id/imageView3"
        android:layout_width="257dp"
        android:layout_height="287dp"
        android:layout_marginTop="60dp"
        app:layout_constraintEnd_toEndOf="@+id/btn_guardar_cancion"
        app:layout_constraintTop_toTopOf="@+id/btn_guardar_cancion"
        app:srcCompat="@mipmap/guitarra" />

</androidx.constraintlayout.widget.ConstraintLayout>